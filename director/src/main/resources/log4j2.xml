<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Properties>
    <Property name="LOG_PATH">/tmp/rvm_logs</Property>
    <Property name="LOG_FILE">director.log</Property>
  </Properties>

  <Appenders>
    <RollingFile name="RollingFile" fileName="${sys:LOG_PATH}/${sys:LOG_FILE}"
                 filePattern="${sys:LOG_PATH}/$${date:yyyy-MM}/${sys:LOG_FILE}-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{1.} - %msg%n%throwable</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="250 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="20"/>
    </RollingFile>
    <!--
    <File name="fileAppender" fileName="${sys:LOG_PATH}/${sys:LOG_FILE}">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1.} - %msg%n%throwable"/>
    </File>
    -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{1.} - %msg%n%throwable}" />
    </Console>
    <Async name="asyncFile">
      <AppenderRef ref="RollingFile"/>
    </Async>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="asyncFile"/>
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>